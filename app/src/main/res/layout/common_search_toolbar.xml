<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:paddingBottom="@dimen/mar_16">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:fontFamily="@font/celias_medium"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

        <EditText
            android:id="@+id/searchET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/big"
            android:background="@drawable/draw_border_white"
            android:layout_marginLeft="@dimen/text_very_small"
            android:layout_marginRight="@dimen/mar_16"
            android:drawableLeft="@mipmap/ic_search_grey_400_24dp"
            android:drawablePadding="@dimen/text_very_small"
            android:hint="@string/app_name"
            android:text=""
            app:layout_constraintTop_toBottomOf="@+id/appbar"
            android:textColor="@color/grey_600"
            android:paddingLeft="@dimen/text_very_small"/>



    </android.support.design.widget.AppBarLayout>

</android.support.constraint.ConstraintLayout>