<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/app_bar_main">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginRight="3dp"
    android:layout_marginLeft="3dp">
   <android.support.v7.widget.CardView
       android:id="@+id/newrderCV"
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       card_view:cardElevation="3dp"
       card_view:cardCornerRadius="4dp"
       card_view:cardUseCompatPadding="true"
       android:layout_weight=".5">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="@string/new_order"
          android:textSize="20sp"
          android:fontFamily="@font/celias_medium"/>
   </android.support.v7.widget.CardView>
   <android.support.v7.widget.CardView
       android:id="@+id/addproduct"
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       card_view:cardElevation="3dp"
       card_view:cardCornerRadius="4dp"
       card_view:cardUseCompatPadding="true"
       android:layout_weight=".5">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="@string/new_addproduct"
          android:textSize="20sp"
          android:fontFamily="@font/celias_medium"/>
   </android.support.v7.widget.CardView>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginRight="3dp"
    android:layout_marginLeft="3dp">
   <android.support.v7.widget.CardView
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       card_view:cardElevation="3dp"
       card_view:cardCornerRadius="4dp"
       card_view:cardUseCompatPadding="true"
       android:layout_weight=".5">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="@string/new_viewedit"
          android:textSize="20sp"
          android:fontFamily="@font/celias_medium"/>
   </android.support.v7.widget.CardView>
   <android.support.v7.widget.CardView
       android:id="@+id/completedorder"
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       card_view:cardElevation="3dp"
       card_view:cardCornerRadius="4dp"
       card_view:cardUseCompatPadding="true"
       android:layout_weight=".5">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="@string/new_comletedorder"
          android:textSize="20sp"
          android:fontFamily="@font/celias_medium"/>
   </android.support.v7.widget.CardView>
</LinearLayout>

   <android.support.v7.widget.CardView
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="150dp"
       card_view:cardElevation="3dp"
       card_view:cardCornerRadius="4dp"
       card_view:cardUseCompatPadding="true">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="@string/paymet"
          android:textSize="20sp"
          android:fontFamily="@font/celias_medium"/>
   </android.support.v7.widget.CardView>


</LinearLayout>